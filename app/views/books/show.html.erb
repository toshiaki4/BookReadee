<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @new_book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class='table'>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <%= attachment_image_tag @user, :image, fallback: "no_image.jpg", format: 'jpeg', size: "40x40" %><br><%= @user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%=@book.body %></td>
            <td>
              <div id="star-rate-<%= @book.id %>"></div>
            </td>
          </tr>
        </table>
    </div>
  </div>
</div>
<script>
$('#star-rate-<%= @book.id %>').raty({
  size: 36,
  starOff:  '<%= asset_path('star-off.png') %>',
  starOn : '<%= asset_path('star-on.png') %>',
  starHalf: '<%= asset_path('star-half.png') %>',
  half: true,
  readOnly: true,
  score: <%= @book.rate %>,
});
</script>

