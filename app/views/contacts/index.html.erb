<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1>Contacts</h1>
        <table class='table'>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @contacts.each do |contact| %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.email %></td>
              <td><%= contact.content.truncate(30) %></td>
              <td><%= link_to 'Show', contact %></td>
              <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
              <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Contact', new_contact_path %>
    </div>
  </div>
</div>
